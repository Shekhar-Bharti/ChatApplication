<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:backgroundTint="@color/white"
    android:id="@+id/constraintLayoutFragmentCreateGroup"
    android:background="@drawable/backgroud_create_group">

    <LinearLayout
        android:id="@+id/linearLayout_sample_create_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePicOfUserCreateGroupAdded"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/avatar"
            app:civ_border_color="#FF000000"
            android:layout_marginLeft="2dp"
            android:padding="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewUserNameCreateGroupAdded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:text="UserName"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonCreateGroupAdded"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:padding="5dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@+id/linearLayout_sample_create_group"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout_sample_create_group"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintRight_toRightOf="@+id/linearLayout_sample_create_group" />

</androidx.constraintlayout.widget.ConstraintLayout>