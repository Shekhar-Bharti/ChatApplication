<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:id="@+id/constraintLayoutCreateGroupHolder"
    >

    <LinearLayout
        android:id="@+id/linearLayout_sample_create_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePicOfUserCreateGroup"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/avatar"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0.5dp"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewUserNameCreateGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="UserName"
                    android:textSize="15dp"
                    android:fontFamily="serif-monospace"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewEmailCreateGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:textSize="13dp"
                    android:paddingBottom="2dp"
                    android:text="Email Id" />
            </LinearLayout>

        </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonAddCreateGroup"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/linearLayout_sample_create_group"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout_sample_create_group"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintRight_toRightOf="@+id/linearLayout_sample_create_group"
        android:layout_marginRight="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>